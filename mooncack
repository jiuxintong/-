#include <iostream>
#include <bits/stdc++.h>
#include <windows.h>
#include <string.h>
#include <fstream>
#include <stdio.h>
using namespace std;
int main()
{
	int a;
	int b[6];
	srand((int)time(0));
	int sum1=0,sum2=0,sum3=0,sum4=0,sum5=0,sum6=0;
	cout<<"中秋博饼"<<endl;
	cout<<"输入1开始博饼，输入0结束游戏"<<endl;
	for(int i=1;i<=1000;i++)
	{
		cin>>a;
		if(a==0)
		{
		cout<<"祝大家中秋快乐"<<endl;
		return 0;
	    }
		if(a==1)
		{
			for(int j=0;j<6;j++)
			{
				b[j]=(rand()%6)+1;
				if(j==5)
				cout<<b[j]<<" "<<endl;
				else
				cout<<b[j]<<" ";
		    }
			if(b[0]==1&&b[1]==1&&b[2]==4&&b[3]==4&&b[4]==4&&b[5]==4)
			{
				cout<<"恭喜你博到插金花（状元）"<<endl;
			}
			else if(b[0]==4&&b[1]==4&&b[2]==4&&b[3]==4&&b[4]==4&&b[5]==4)
			{
				cout<<"恭喜你博到六杯红（状元）"<<endl;
			}
			else if(b[1]==1&&b[2]==1&&b[3]==1&&b[4]==1&&b[5]==1&&b[0]==1)
			{
				cout<<"恭喜你博到边地锦（状元）"<<endl;
			}
			else if(b[1]==2&&b[2]==2&&b[3]==2&&b[4]==2&&b[5]==2&&b[0]==2)
			{
				cout<<"恭喜你博到黑六勃（状元）"<<endl;
			}
			else if(b[1]==3&&b[2]==3&&b[3]==3&&b[4]==3&&b[5]==3&&b[0]==3)
			{
				cout<<"恭喜你博到黑六勃（状元）"<<endl;
			}
			else if(b[1]==5&&b[2]==5&&b[3]==5&&b[4]==5&&b[5]==5&&b[0]==5)
			{
				cout<<"恭喜你博到黑六勃（状元）"<<endl;
			}
			else if(b[1]==6&&b[2]==6&&b[3]==6&&b[4]==6&&b[5]==6&&b[0]==6)
			{
				cout<<"恭喜你博到黑六勃（状元）"<<endl;
			}
			else if(b[0]==1&&b[1]==2&&b[2]==3&&b[3]==4&&b[4]==5&&b[5]==6)
			{
				cout<<"恭喜你博到对堂（榜眼）"<<endl;
			}
			else if(b[0]==b[1]&&b[0]==b[2]&&b[0]==b[3]&&b[0]==b[4]&&b[0]!=b[5]&&b[0]!=4)
			{
				cout<<"恭喜你博到五子登科（状元）"<<endl;
			}
			else if(b[5]==b[1]&&b[5]==b[2]&&b[5]==b[3]&&b[5]==b[4]&&b[5]!=b[0]&&b[5]!=4)
			{
				cout<<"恭喜你博到五子登科（状元）"<<endl;
			}
			else if(b[5]==b[1]&&b[5]==b[2]&&b[5]==b[3]&&b[5]==b[4]&&b[5]!=b[0]&&b[5]==4)
			{
				cout<<"恭喜你博到五红（状元）"<<endl;
			}
			else if(b[0]==b[1]&&b[0]==b[2]&&b[0]==b[3]&&b[0]==b[4]&&b[0]!=b[5]&&b[0]==4)
			{
				cout<<"恭喜你博到五红（状元）"<<endl;
			}
			else 
			{
				sum1=0,sum2=0,sum3=0,sum4=0,sum5=0,sum6=0;
				for(int x=0;x<6;x++)
				{
					if(b[x]==1)
					{
						sum1++;
					}
					if(b[x]==2)
					{
						sum2++;
					}
					if(b[x]==3)
					{
						sum3++;
					}
					if(b[x]==4)
					{
						sum4++;
					}
					if(b[x]==5)
					{
						sum5++;
					}
					if(b[x]==6)
					{
						sum6++;
					}
			    }
					if(sum4==3)
					{
						cout<<"恭喜你博到三红（探花）"<<endl;
					}
					else if(sum4==4)
					{
						cout<<"恭喜你博到四点红（状元）"<<endl;
					}
					else if(sum1==4||sum2==4||sum3==4||sum5==4||sum6==4)
					{
						cout<<"恭喜你博到四进（进士）"<<endl;
					}
					else if(sum4==2)
					{
						cout<<"恭喜你博到二举（举人）"<<endl;
					}
					else if(sum4==1)
					{
						cout<<"恭喜你博到一秀（秀才）"<<endl;
					}
					else
					{
						cout<<"再接再厉"<<endl;
					}
			}
		}
	}
	return 0;
}
